{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "public/index.php",
      "use": "vercel-php@0.7.4"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/(.*)$",
      "dest": "/public/index.php"
    }
  ]
}
